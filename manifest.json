{
  "name": "Site Blocker",
  "version": "0.1",
  "description": "Blocks sites",
  "manifest_version": 2,
   "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "fullstop@colinkiama.com",
      "strict_min_version": "60.0"
    }
  },
  "background": {
    "page": "views/background-page.html"
  },
  "browser_action": {
    "default_icon": "assets/icons/icon-32.png",
    "default_title": "Site Blocker",
    "default_popup": "views/popup.html"
  },
  "options_ui": {
    "page": "views/settings.html",
    "browser_style": false,
    "chrome_style": false,
    "open_in_tab": true
  }
}